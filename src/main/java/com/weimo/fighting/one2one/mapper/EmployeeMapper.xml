<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weimo.fighting.one2one.mapper.EmployeeMapper">

    <select id="selectEmployeeById" parameterType="String" resultMap="employee">
            select * from employee_basic where emp_no=#{emp_no}
    </select>

    <resultMap id="employee" type="com.weimo.fighting.one2one.model.Employee">
        <id property="emp_no" column="emp_no"/>
        <result property="emp_name" column="emp_name"/>
        <result property="dept_id" column="dept_id"/>
        <result property="emp_gender" column="emp_gender"/>
        <result property="emp_email" column="emp_email"/>
        <association property="employeeSchool" column="emp_no" select="com.weimo.fighting.one2one.mapper.EmployeeSchoolMapper" javaType="com.weimo.fighting.one2one.model.EmployeeSchool"/>
    </resultMap>
</mapper>